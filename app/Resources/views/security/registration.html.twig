{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Registration{% endblock %}
{% block body %}
  <div class="container" id="wrap">
    <div class="row" id="main">
      <div class="col-lg-5" id="registration_block">
        <h1 class="mb-4 text-center text-dark">Registration</h1>
        {{ form_start(form, {'attr': {'class': 'form-horizontal px-5 py-5', 'id': 'registration_form', 'novalidate': 'novalidate'}}) }}
          <div class="form-group">
            {{ form_label(form.username, "Username", {'label_attr' : {'class': 'control-label'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            <span class="invalid-feedback d-block" id="username_error"></span>
          </div>
          <div class="form-group">
            {{ form_label(form.email, "Email", {'label_attr' : {'class': 'control-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            <span class="invalid-feedback d-block" id="email_error"></span>
          </div>
          <div class="form-group">
            {{ form_label(form.password, "Password", {'label_attr' : {'class': 'control-label'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            <span class="invalid-feedback d-block" id="password_error"></span>
          </div>
          <div class="form-group">
            {{ form_label(form.name, "Name", {'label_attr' : {'class': 'control-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            <span class="invalid-feedback d-block" id="name_error"></span>
          </div>
          <div class="form-group">
            {{ form_label(form.firstName, "First name", {'label_attr' : {'class': 'control-label'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            <span class="invalid-feedback d-block" id="firstName_error"></span>
          </div>
          <div class="form-group">
            {{ form_label(form.image.file, "Avatar", {'label_attr' : {'class': 'control-label'}}) }}
            <span class="invalid-feedback d-block" id="image_error"></span>
            {{ form_widget(form.image.file, {'attr': {'class': 'form-control'}}) }}
          </div>
          <a id="add_preview" href="#"><img id="preview" src="{{ asset('/img/plus.png') }}"/></a>
          <div class="d-flex">
            <button id="registrationBtn" class="btn btn-primary mt-3 w-75 mx-auto">Create an account</button>
          </div>
          <div class="g-recaptcha d-flex justify-content-center mt-4" id="recaptcha" data-badge="inline" data-callback="formSubmit" data-sitekey="6LeNBXQUAAAAAD0QVvKM9L2fJGRTRvcZdDma6qZS" data-size="invisible"></div>
        {{ form_end(form )}}
      </div>
    </div>
  </div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <script src="{{ asset('/js/registration.js') }}"></script>
{% endblock %}

