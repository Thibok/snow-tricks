{% extends 'base.html.twig' %}
{% import "macros/form_elements.html.twig" as formElements %}

{% block title %} {{ parent() }} Reset Password{% endblock %}
{% block body %}
    <div class="container" id="wrap">
        <div class="row" id="main">
            <div class="col-lg-5" id="security_block">
                <h1 class="mb-4 text-center text-dark">Reset Password</h1>
                {{ form_start(form, {'attr': {'class': 'form-horizontal px-5 py-5', 'id': 'security_form', 'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        {{ form_label(form.email, "Email", {'label_attr' : {'class': 'control-label'}}) }}
                        {{ form_widget(form.email) }}
                        <span class="invalid-feedback d-block" id="email_error"></span>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, "Password", {'label_attr' : {'class': 'control-label'}}) }}
                        {{ form_widget(form.password) }}
                        <span class="invalid-feedback d-block" id="password_error"></span>
                    </div>
                    <div class="d-flex">
                        <button id="resetPassBtn" class="btn btn-primary my-3 mx-auto">Reset</button>
                    </div>
                    {{ formElements.recaptcha("g-recaptcha d-flex justify-content-center mt-3") }}
                {{ form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    {{ parent() }}
    {% javascripts filter='?jsqueeze'
        '@AppBundle/Resources/public/js/base.js'
        '@AppBundle/Resources/public/js/reset_pass.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}