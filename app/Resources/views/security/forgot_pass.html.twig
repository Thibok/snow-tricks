{% extends 'base.html.twig' %}
{% import "macros/form_elements.html.twig" as formElements %}

{% block title %} {{ parent() }} Forgot Password{% endblock %}
{% block body %}
    <div class="container" id="wrap">
        <div class="row" id="main">
            <div class="col-lg-5" id="security_block">
                <h1 class="mb-4 text-center text-dark">Forgot Password</h1>
                {{ form_start(form, {'attr': {'class': 'form-horizontal px-5 py-5', 'id': 'security_form', 'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        {{ form_label(form.username, "Username", {'label_attr' : {'class': 'control-label'}}) }}
                        {{ form_widget(form.username) }}
                        <span class="invalid-feedback d-block" id="username_error"></span>
                    </div>
                    <div class="d-flex">
                        <button id="forgotPassBtn" class="btn btn-primary my-3 mx-auto">Ask for reset password</button>
                    </div>
                    {{ formElements.recaptcha("g-recaptcha d-flex justify-content-center mt-3") }}
                {{ form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <script src="{{ asset('/js/forgot_pass.js') }}"></script>
{% endblock %}