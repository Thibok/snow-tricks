<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SnowTricks -{% endblock %}</title>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
        <link href="https://cdn.jsdelivr.net/gh/StephanWagner/jBox@v0.5.1/dist/jBox.all.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://use.typekit.net/sec3dre.css">
        {% block stylesheets %}
            {% stylesheets 'bundles/app/css/*' filter='cssrewrite, ?scssphp' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg fixed-top" id="mainNav">
            <a id="logo" href="{{ path('st_index') }}"><img src="{{ asset('img/logo.png') }}" alt="snowboarder logo"/></a>
            <ul class="nav">
                <li class="nav-item">
                    <a id="home" class="nav-link text-light" href="{{ path('st_index') }}">Home</a>
                </li>
                {% if not is_granted('IS_AUTHENTICATED_FULLY')%}
                    <li class="nav-item">
                        <a id="registration" class="nav-link text-light" href="{{ path('st_registration') }}">Sign in</a>
                    </li>
                    <li class="nav-item">
                        <a id="login" class="nav-link text-light" href="{{ path('st_login') }}">Sign up</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a id="addTrick" class="nav-link text-light" href="{{ path('st_add_trick') }}">Add trick</a>
                    </li>
                    <li class="nav-item">
                        <a id="logout" class="nav-link text-light" href="{{ path('st_logout') }}">Logout</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
        {% block body %}{% endblock %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <footer class="page-footer">
            <div id="copyright" class="text-light footer-copyright text-left">Copyright @ 2018</div>
        </footer>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/gh/StephanWagner/jBox@v0.5.1/dist/jBox.all.min.js"></script>
        {% endblock %}
    </body>
</html>
